<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.GroupCreationController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Créer un groupe" />
    <Label text="Nom du groupe :" wrapText="true" />
    <TextField fx:id="groupNameField" maxWidth="300.0" promptText="Nom du groupe" />
    <Label text="Contacts :" wrapText="true" />
    <ListView fx:id="contactsListView" maxWidth="300.0" />
    <Button fx:id="createButton" onAction="#handleCreateGroup" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Créer" />
</VBox>
