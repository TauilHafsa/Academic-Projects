<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.InvitationsController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <ListView fx:id="invitationsListView" prefHeight="200.0" prefWidth="200.0" />
    <HBox spacing="10">
        <Button onAction="#handleAcceptInvitation" text="Accepter" />
        <Button onAction="#handleDeclineInvitation" text="Refuser" />
    </HBox>
</VBox>
